/* pages/cart/index.wxss */
page{
  padding-bottom: 90rpx;
}
.address{
  padding: 20rpx 0;
}
.address-info{
  padding: 10rpx; 
  font-size: 26rpx;
  border-bottom: 2rpx solid red;
}
.address-info .one{
  display: flex;
  justify-content: space-between; 
}

.cart-content{
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  border-top: 2rpx solid red;
  border-bottom: 2rpx solid #ccc;
  padding: 0 8rpx;
}
.cart-checkbox{
  flex: 1;
  display: flex;
  align-items: center;
}
.cart-content image{
  flex: 2;
}
.cart-wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 16rpx;
}
.cart-wrap .cart-title{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  font-size: 26rpx;
}
.cart-wrap .cart-wrap-b{
  display: flex;
  justify-content: space-between;
}
.cart-wrap .cart-counter{
  display: flex;
  align-items: center;
}
.num{
  margin: 0 8rpx;
}
.cart-price{
  font-weight: bold;
  font-size: 28rpx;
  color: var(--themeColor);
}



.show-price{
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 2rpx solid #ccc;
}
.all-check{
  flex: 2;
  font-size: 24rpx;
  margin-left: 8rpx;
}
.all-price{
  flex: 4;
  text-align: right;
  margin-right: 30rpx;
}
.all-price view{
  color: var(--themeColor);
}
.all-price text{
  font-size: 24rpx;
}
.settlement{
  flex: 2;
  height: 100%;
  background-color: var(--themeColor);
  display: flex;
  align-items: center;
  justify-content: center;

  font-weight: bold;
  color: white;
}
